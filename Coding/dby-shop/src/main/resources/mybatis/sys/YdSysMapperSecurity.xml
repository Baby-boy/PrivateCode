<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yd.dby.a.sys.mapper.YdSysMapperSecurity">
	<select id="queryUserByOpenId" resultType="com.yd.dby.a.sys.entity.YdSysThirdPartyLoginUser" >
		select tpl_id,tpl_user_id,tpl_type,tpl_openid,tpl_created_time
		from yd_thridparty_login
		where tpl_openid = #{tpl_openid}
	</select>
	
	<select id="queryUserInfoById" resultType="com.yd.dby.a.sys.entity.YdSysUserFull" >
		select * from yd_user
		where user_id = #{user_id}
	</select>
</mapper>