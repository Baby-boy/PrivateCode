<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yd.dby.b.shop.mapper.YdShopMapperOrderGoods">

	<sql id="field">
		order_id, goods_id, goods_name, goods_num,
		goods_price, goods_cover, goods_pay_price,
		store_id, buyer_id, goods_original_price, created_at
	</sql>

	<insert id="store" useGeneratedKeys="true" keyProperty="og_id">
		INSERT INTO
		yd_order_goods(
			<include refid="field"></include>
		)
		VALUE (
			#{order_id}, #{goods_id}, #{goods_name}, #{goods_num},
			#{goods_price}, #{goods_cover}, #{goods_pay_price},
			#{store_id}, #{buyer_id}, #{goods_original_price}, now()
		)
		
	</insert>

</mapper>