<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yd.dby.b.shop.mapper.YdShopMapperStoreGoodsClassify">
	<sql id="field">
		sc_id as id, store_id, sort, is_show, pid, title
	</sql>
	
	<!-- 列表 -->
	<select id="lists" resultType="java.util.HashMap">
		SELECT
			<include refid="field"></include>
		FROM
			yd_store_goods_classify
		WHERE
			store_id = #{store_id}
	</select>
</mapper>