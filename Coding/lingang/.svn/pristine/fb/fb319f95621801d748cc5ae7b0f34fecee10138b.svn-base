<div class="row" ng-controller="sysBasicsTypeCtrl">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>{{title}}</h5>
            </div>
            <div class="ibox-content">
                <form class="form-inline">
	               <div class="row m-t">
	                    <div class="form-group col-xs-3">
						    <label for="orderStatus">基础类型:</label>
							<select class="form-control" id="orderStatus" ng-model="bookState">
								 <option value="">请选择</option>
                                 <option value="1">集团</option>
                                 <option value="2">公司</option>
                                 <option value="3">科技</option>
                                 <option value="4">人才服务</option>
                                 <!-- <option value="4">已还书(待确认)</option>
                                 <option value="5">已还书(已确认)</option>
                                 <option value="6">不还书了</option> -->
							</select >
						</div>
						<!-- <div class="form-group col-xs-3">
							<label for="subTime">会员号码:</label>
							<input type="text" class="form-control" ng-model="tel" placeholder="请输入手机号.." >
						</div>
						<div class="form-group col-xs-3">
							<label for="subTime">下单时间:</label>
							<input type="text" id="subTime" class="form-control" ng-model="orderTime" mindate="1900-10-10 00:00:00" date-picker placeholder="请选择时间..." >
						</div> -->
						<div class="col-md-2">
							<button type="button" class="btn btn-primary" ng-click="getOnlineBorrBookList()">搜索</button>
						</div>
					</div>
					<div class="row m-t">
						
					</div>
				  </form>
		 	  <div >
 		       <table class="table table-striped table-bordered table-hover dataTables-example">
                      <tr>
                            <th style="text-align: center;">序号</th>
                            <th style="text-align: center;">基础类型</th>
                            <th style="text-align: center;">基础名称</th>
                            <th style="text-align: center;">创建时间</th>
                            <th style="text-align: center;">修改时间</th>
                            <th style="text-align: center;">基础状态</th>
                            <th style="text-align: center;">管理基础</th>
                        </tr>
                        <tr ng-repeat="borr in borrowBookList">
                            <td>{{$index + 1}}</td>
                            <td>{{borr.bookOrderId}}</td>
                            <td>{{borr.createDate | date:'yyyy-MM-dd HH:mm'}}</td>
                            <td>{{borr.vipInfo.vipTel}}</td>
                            <td>{{borr.bookCount}}</td>
                            <td>
                               <span ng-if="borr.bookState == 1" ng-style="borr.bookState == 1?{color:'red'}:''">未发货</span>
                               <span ng-if="borr.bookState == 2" ng-style="borr.bookState == 2?{color:'blue'}:''">已发货</span>
                               <span ng-if="borr.bookState == 3" ng-style="borr.bookState == 3?{color:'blue'}:''">借阅中</span>
                               <span ng-if="borr.bookState == 4" ng-style="borr.bookState == 4?{color:'red'}:''">已还书(等待确认)</span>
                               <span ng-if="borr.bookState == 5" ng-style="borr.bookState == 5?{color:'blue'}:''">已还书(已确认)</span>
                               <span ng-if="borr.bookState == 6" ng-style="borr.bookState == 6?{color:'red'}:''">不还书了</span>
                            </td>
                            <td class="center"><a href="#/book/onlineBorrBookDetail/{{borr.bookOrderId}}">管理订单</a>&nbsp;
                        </tr>
            	   </table>
                    <!--分页开始-->
					  <!--  <ndtech-pagination conf="paginationConf"></ndtech-pagination> -->
					<!--分页结束-->
 		       </div>
            </div>
        </div>
    </div>
    
</div>

