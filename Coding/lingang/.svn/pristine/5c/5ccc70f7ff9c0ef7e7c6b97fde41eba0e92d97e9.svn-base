<div class="row" ng-controller="sysRegionPageListCtrl">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
            	<div class="row">
				  <div class="col-md-10"></div>
				  <div class="col-md-2">
				  	<a ng-class="nav == 1?'btn-primary':'btn-info'" class="btn btn-sm" href="javascript:void(0)">添加地区信息</a>
				  </div>
				</div>
            </div>
            <div class="ibox-content">
                <form class="form-inline">
	               <div class="row m-t">
	               
	               		<div class="form-group col-xs-3">
						    <label for="regionType">标签类型:</label>
							<select class="form-control" id="regionType" ng-model="para.regionType">
								 <option value="">请选择</option>
                                 <option value="1">上海</option>
                                 <option value="2">域外</option>
							</select >
						</div>
						<div class="col-md-2">
							<button type="button" class="btn btn-primary" ng-click="getRegionList()">立即搜索</button>
						</div>
						
						<!-- <div class="col-md-2">
							<button type="button" class="btn btn-primary" ng-click="getOnlineBorrBookList()">添加</button>
						</div> -->
					</div>
					<div class="row m-t">
						
					</div>
				  </form>
		 	  <div >
 		       <table class="table table-striped table-bordered table-hover dataTables-example">
                      <tr>
                            <th style="text-align: center;">序号</th>
                            <th style="text-align: center;">标签名称</th>
                            <th style="text-align: center;">创建时间</th>
                            <th style="text-align: center;">修改时间</th>
                            <th style="text-align: center;">标签类型</th>
                            <th style="text-align: center;">标签管理</th>
                        </tr>
                        <tr ng-repeat="region in regionList">
                            <td>{{$index + 1}}</td>
                            
                            <td>{{region.regionName}}</td>
                            <td>{{region.createTime | date:'yyyy-MM-dd HH:mm'}}</td>
                            <td>{{region.updateTime | date:'yyyy-MM-dd HH:mm'}}</td>
                            <td>
                               <span ng-if="region.regionType == 1" >上海</span>
                               <span ng-if="region.regionType == 2" >域外</span>
                            </td>
                            <td class="center"><a href="" ng-click="showRegionDetails(region)" >管理</a>&nbsp;
                        </tr>
            	   </table>
                    <!--分页开始-->
 					  <ndtech-pagination conf="paginationConf"></ndtech-pagination>  
					<!--分页结束-->
 		       </div>
            </div>
        </div>
    </div>

<!-- 标签详情 -->
	<div class="modal fade" id="myModalBasics" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	        <h4 class="modal-title" id="myModalLabel">基础设置</h4>
	      </div>
	      <div class="modal-body">
			 <form class="form-horizontal" role="form">
					 
				<div class="form-group">
					 <label for="managerState" class="col-sm-2 control-label">基础类型</label>
					     <div class="col-sm-3">
					      	<select class="form-control" ng-model="b.basicsType">
							  <option  value="1">服务信息</option>
					      	  <option  value="2">开放层级</option>
							</select>
					      </div>
				</div>
				<div class="form-group">
					<label for="basicsName" class="col-sm-2 control-label">基础名称</label>
					   <div class="col-sm-6">
					      <input type="basicsName" class="form-control" id="basicsName" placeholder="" ng-model="b.basicsName">
					   </div>
				</div>
				<div class="form-group">
					 <label for="basicsState" class="col-sm-2 control-label">基础类型</label>
					     <div class="col-sm-3">
					      	<select class="form-control" ng-model="basics.basicsState">
							  <option  value="1">已上传</option>
					      	  <option  value="2">已发布</option>
					      	  <option  value="3">已删除</option>
							</select>
					     </div>
				</div>
					
					  
		    </form>
	      </div>
	      <div class="modal-footer">
		        <button type="button" class="btn btn-default" style="margin-bottom: 0;" data-dismiss="modal">关闭</button>
				<button type="button" class="btn btn-primary" ng-click="updateSysBasics()">保存</button>
	      </div>
	    </div>
	  </div>
	</div>
</div>

