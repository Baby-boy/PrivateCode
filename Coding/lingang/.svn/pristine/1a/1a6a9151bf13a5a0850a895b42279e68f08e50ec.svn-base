<div class="row" ng-controller="sysLabelPageListCtrl">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
            	<div class="row">
				  <div class="col-md-10"></div>
				  <div class="col-md-2">
				  	<a ng-class="nav == 1?'btn-primary':'btn-info'" class="btn btn-sm" href="javascript:void(0)">添加标签 </a>
				  </div>
				</div>
            </div>
            <div class="ibox-content">
                <form class="form-inline">
	               <div class="row m-t">
	               
	               		<div class="form-group col-xs-3">
						    <label for="labelType">标签类型:</label>
							<select class="form-control" id="labelType" ng-model="para.labelType">
								 <option value="">请选择</option>
                                 <option value="1">合作商</option>
                                 <option value="2">入驻企业</option>
                                 <option value="3">企业性质</option>
                                 <option value="4">企业资质</option>
                                 <option value="5">注册资本</option>
                                 <option value="6">上市情况</option>
                                 <option value="7">特色标签</option>
                                 <option value="8">产业园区</option>
                                 <option value="9">公共平台</option>
                                 <option value="10">产业集群</option>
							</select >
						</div>
	                    <div class="form-group col-xs-3">
						    <label for="labelStatus">标签状态:</label>
							<select class="form-control" id="labelStatus" ng-model="para.labelState">
								 <option value="">请选择</option>
                                 <option value="1">可用</option>
                                 <option value="2">不可用</option>
							</select >
						</div>
						<div class="col-md-2">
							<button type="button" class="btn btn-primary" ng-click="getLabelList()">立即搜索</button>
						</div>
						
						<!-- <div class="col-md-2">
							<button type="button" class="btn btn-primary" ng-click="getOnlineBorrBookList()">添加</button>
						</div> -->
					</div>
					<div class="row m-t">
						
					</div>
				  </form>
		 	  <div >
 		       <table class="table table-striped table-bordered table-hover dataTables-example">
                      <tr>
                            <th style="text-align: center;">序号</th>
                            <th style="text-align: center;">标签名称</th>
                            <th style="text-align: center;">标签类型</th>
                            <th style="text-align: center;">创建时间</th>
                            <th style="text-align: center;">修改时间</th>
                            <th style="text-align: center;">标签状态</th>
                            <th style="text-align: center;">标签管理</th>
                        </tr>
                        <tr ng-repeat="label in labelList">
                            <td>{{$index + 1}}</td>
                            
                            <td>{{label.labelName}}</td>
                            <td>
                               <span ng-if="label.labelType == 1" >合作商</span>
                               <span ng-if="label.labelType == 2" >入驻企业</span>
                               <span ng-if="label.labelType == 3" >企业性质</span>
                               <span ng-if="label.labelType == 4" >企业资质</span>
							   <span ng-if="label.labelType == 5" >注册资本</span>
                               <span ng-if="label.labelType == 6" >上市情况</span>
                               <span ng-if="label.labelType == 7" >特色标签</span>
                               <span ng-if="label.labelType == 8" >产业园区</span>
                               <span ng-if="label.labelType == 9" >公共平台</span>
                               <span ng-if="label.labelType == 10">产业集群</span>                                   
                            </td>
                            <td>{{label.createTime | date:'yyyy-MM-dd HH:mm'}}</td>
                            <td>{{label.updateTime | date:'yyyy-MM-dd HH:mm'}}</td>
                            <td>
                               <span ng-if="label.labelState == 1" ng-style="label.labelState == 1?{color:'green'}:''">可用</span>
                               <span ng-if="label.labelState == 2" ng-style="label.labelState == 2?{color:'red'}:''">不可用</span>
                            </td>
                            <td class="center"><a href="" ng-click="showLabelDetails(label)" >管理</a>&nbsp;
                        </tr>
            	   </table>
                    <!--分页开始-->
 					  <ndtech-pagination conf="paginationConf"></ndtech-pagination>  
					<!--分页结束-->
 		       </div>
            </div>
        </div>
    </div>

<!-- 标签详情 -->
	<div class="modal fade" id="myModalBasics" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	        <h4 class="modal-title" id="myModalLabel">基础设置</h4>
	      </div>
	      <div class="modal-body">
			 <form class="form-horizontal" role="form">
					 
				<div class="form-group">
					 <label for="managerState" class="col-sm-2 control-label">基础类型</label>
					     <div class="col-sm-3">
					      	<select class="form-control" ng-model="b.basicsType">
							  <option  value="1">服务信息</option>
					      	  <option  value="2">开放层级</option>
							</select>
					      </div>
				</div>
				<div class="form-group">
					<label for="basicsName" class="col-sm-2 control-label">基础名称</label>
					   <div class="col-sm-6">
					      <input type="basicsName" class="form-control" id="basicsName" placeholder="" ng-model="b.basicsName">
					   </div>
				</div>
				<div class="form-group">
					 <label for="basicsState" class="col-sm-2 control-label">基础类型</label>
					     <div class="col-sm-3">
					      	<select class="form-control" ng-model="basics.basicsState">
							  <option  value="1">已上传</option>
					      	  <option  value="2">已发布</option>
					      	  <option  value="3">已删除</option>
							</select>
					     </div>
				</div>
					
					  
		    </form>
	      </div>
	      <div class="modal-footer">
		        <button type="button" class="btn btn-default" style="margin-bottom: 0;" data-dismiss="modal">关闭</button>
				<button type="button" class="btn btn-primary" ng-click="updateSysBasics()">保存</button>
	      </div>
	    </div>
	  </div>
	</div>
</div>

