package com.lingang.platform.controller.message;

import javax.annotation.Resource;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import com.lingang.api.domain.basic.JsonResult;
import com.lingang.api.domain.basic.Page;
import com.lingang.api.domain.basic.ServiceResult;
import com.lingang.api.domain.entity.SysMessage;
import com.lingang.api.domain.pfvo.SysManagerPfVo;
import com.lingang.api.service.SysMessageService;

@Controller
@RequestMapping("/message")
public class SysMessageConstroller {
	@Resource
	private SysMessageService sysMessageService;
	/**
	* @Description: (信息纠错/意见反馈)
	* @param pageIndex
	* @param pageSize
	* @param messageType
	* @return    
	* @author gsh(15136390655@163.com)
	* @date: 2016年12月8日 上午12:09:55
	 */
	@RequestMapping(value="/sysMessagePagePageList.do",method={RequestMethod.GET,RequestMethod.POST})
	@ResponseBody
	public JsonResult sysMessagePagePageList(Integer pageIndex,Integer pageSize,Integer messageType ){
		JsonResult jsonResult = new JsonResult();
		ServiceResult<Page<SysMessage>> result=sysMessageService.selectMessagePageList(pageIndex, pageSize, messageType);
		jsonResult.setStateCode(result.getStateCode());
		jsonResult.setData(result.getData());
		return jsonResult;
	};

}
