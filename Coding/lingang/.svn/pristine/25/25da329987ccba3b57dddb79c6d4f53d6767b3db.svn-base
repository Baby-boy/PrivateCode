define(['mySession', 'route-config', 'serviceBase','layer','My97DatePicker','uEditor', 'uEditorConfig', 'uEditorCulture','ajaxUpload'], function (mySession, routeConfig, serviceBase,My97DatePicker) {
    var _controller = function($scope, $http, $routeParams, $location,sysNewsService){
    	var ue = UM.getEditor('parkContent',{
	        initialFrameWidth:'100%',
	        initialFrameHeight:200
        });
    	//分页设置
    	$scope.paginationConf = {
        	    currentPage: 1, //页数
                totalItems: 0, //查询结果总数
                perPageOptions: [1, 5, 10, 15, 20, 30, 50],
                itemsPerPage: 5, //每页查询条数
                rememberPerPage: 'sysNewsPageListCtrlPerPage',
                autoLoadData: true,
                onChange: function () {
                    if (this.currentPage > 0) {
                    	//调用方法
                    	alert(1);
                    	$scope.getNewsAdd();
                    }
                }
        };
    	//请求参数
    	$scope.para={
    			news_title:"",
    			news_author:"",
    			news_content:ue.getContent(),
    			news_isup:2,
    			news_img_id:1
    	};
    	//列表数据
    	$scope.sysNewsAddMsg=[];
    	
    	//获取列表
    	$scope.getNewsAdd=function(){
    		//当前页与每页显示条数
    		$scope.para.currentPage =$scope.paginationConf.currentPage;
    		$scope.para.onePageCount = $scope.paginationConf.itemsPerPage;
    		
    		sysNewsService.sysNewsAdd($http,$scope.para).then(function(data) {
    			if(data.stateCode=="1000"){
    				if(window.confirm("添加成功！是否继续添加信息？")){
    					$("input").val("");
    					$("textarea").val("");
    				}else{
    					location.href="#/home/sysNews/sysNewsPageList/index";
    				}
    				/*$scope.sysNewsAddMsg=data.data.data.list;*/
    				//页数获取
    				$scope.paginationConf.totalItems=data.data.data.countRecord;
    			}else{
    				alert("请求失败，请稍后再试");
    			}
    		});
    	};
    	
    };
    return ["sysNewsAddCtrl", _controller];
});