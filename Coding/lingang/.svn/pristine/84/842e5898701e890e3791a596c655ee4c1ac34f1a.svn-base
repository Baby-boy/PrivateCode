package com.lingang.common.ad;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.HttpURLConnection;
import java.net.URL;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

import com.lingang.common.custom.SMSRequest;

/**
 *@Description: (Http请求AD域，截取字符串返回)
 *@Author: lgl(lgl1012dream@foxmail.com)
 *@date:2017年1月7日 下午2:11:44
 *@Version:1.0
 */
public class HttpResultStr {

	private static Logger log = LoggerFactory.getLogger(HttpResultStr.class);
	
	private final static String url = "http://116.228.182.237:8000/UserService";
	
//	public final static StringBuffer stringBuffer = new StringBuffer(url); 
	
	public static String resultObject (String account,String pwd) {
		String resultStr ="";
		StringBuffer sb =new StringBuffer(url+"/"+account+"/"+pwd);
		String result=doHttp(sb).result;
//		System.out.println(result);
		
		Integer beginIndex=result.indexOf(">");
		Integer endIndex=result.lastIndexOf("<");
		
		if(endIndex>0){
			resultStr = result.substring(beginIndex+1, endIndex);
//			 System.out.println(resultStr);
		}
		
		return resultStr;
	}
	
	private static SMSRequest doHttp(StringBuffer sb) {
		SMSRequest httpRequest = new SMSRequest();
		try {
			// 发送GET请求
			URL url = new URL(sb.toString());
			HttpURLConnection conn = (HttpURLConnection) url.openConnection();
			conn.setRequestMethod("GET");
			conn.setRequestProperty("accept", "*/*");
			conn.setRequestProperty("Content-Type", "application/x-www-form-urlencoded");
			conn.setRequestProperty("Connection", "Keep-Alive");
			conn.setUseCaches(false);
			conn.setDoInput(true);
			conn.setDoOutput(true);
			
			httpRequest.responseCode = conn.getResponseCode();
			// 获取响应状态
			if (conn.getResponseCode() != HttpURLConnection.HTTP_OK) {
				log.debug("连接失败！");
				return httpRequest;
			}
			// 获取响应内容体
			String line, result = "";
			BufferedReader in = new BufferedReader(new InputStreamReader(conn.getInputStream()));
			while ((line = in.readLine()) != null) {
				result += line;
			}
			in.close();
			httpRequest.result = result;
			
			return httpRequest;
		} catch (IOException e) {
			log.error("发短信异常!", e);
		}
		return httpRequest;
	}
}
