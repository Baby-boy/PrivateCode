<div class="row" ng-controller="sysUserPageListCtrl">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>{{title}}</h5>
            </div>
            <div class="ibox-content">
                <form class="form-inline">
	               <div class="row m-t">
						<div class="form-group col-xs-3">
							<label for="subTime">账号:</label>
							<input type="text" class="form-control" ng-model="para.userAccount" placeholder="请输入账号" >
						</div>
						<div class="form-group col-xs-3">
							<label for="subTime">姓名:</label>
							<input type="text" class="form-control" ng-model="para.userName" placeholder="请输入姓名" >
						</div>

						<div class="col-md-3">
							<button type="button" class="btn btn-primary" ng-click="getUserList()">立即搜索</button>
						</div>
					</div>
					<div class="row m-t">
					</div>
				  </form>
		 	  <div >
 		       <table class="table table-striped table-bordered table-hover dataTables-example">
                      <tr>
                      		<th style="text-align: center;">序号</th>
                            <th style="text-align: center;">账号</th>
                            <th style="text-align: center;">姓名</th>
                            <th style="text-align: center;">所属公司</th>
                            <th style="text-align: center;">部门</th>
                            <th style="text-align: center;">职位</th>
                            <th style="text-align: center;">状态</th>
                            <th style="text-align: center;">操作</th>
                        </tr>
                        <tr ng-repeat="user in userList">
                            <td>{{$index + 1}}</td>
                            <td>{{user.userAccount}}</td>
                            <td>{{user.userName}}</td>
                            <td>{{user.userCompany}}</td>
                            <td>{{user.userDepartment}}</td>
                            <td>{{user.userPost}}</td>
                            <td>
                               <span ng-if="user.userState == 1" ng-style="user.userState == 1?{color:'blue'}:''">正常</span>
                               <span ng-if="user.userState == 2" ng-style="user.userState == 2?{color:'red'}:''">异常</span>
                            </td>
                            <td class="center"><a href="" ng-click="showShowDetails(manager)">管理</a>&nbsp;
                        </tr>
            	   </table>
                   <div class="row m-t">
					  <div class="col-md-10 col-md-offset-1">
					  		<!--分页开始-->
							<ndtech-pagination class conf="paginationConf"></ndtech-pagination>
							<!--分页结束-->
					  </div>
				   </div>
 		       </div>
            </div>
        </div>
    </div>
    
    <!-- APP详情 -->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	        <h4 class="modal-title" id="myModalLabel">管理员详情</h4>
	      </div>
	      <div class="modal-body">
				  	<form class="form-horizontal" role="form">
					 
					  <div class="form-group">
					    <label for="managerAccount" class="col-sm-2 control-label">账号</label>
					    <div class="col-sm-6">
					      <input type="managerAccount" class="form-control" id="managerAccount" placeholder="" ng-model="manager.managerAccount">
					    </div>
					  </div>
					  
					  <div class="form-group">
					    <label for="managerPassword" class="col-sm-2 control-label">密码</label>
					    <div class="col-sm-6">
					      <input type="managerPassword" class="form-control" id="managerPassword" placeholder="" ng-model="manager.managerPassword">
					    </div>
					  </div>
					  
					  <div class="form-group">
					    <label for="managerName" class="col-sm-2 control-label">名称</label>
					    <div class="col-sm-6">
					      <input type="managerName" class="form-control" id="managerName" placeholder="" ng-model="manager.managerName">
					    </div>
					  </div>
					  
					  <div class="form-group">
					    <label for="managerTel" class="col-sm-2 control-label">联系方式</label>
					    <div class="col-sm-6">
					      <input type="managerTel" class="form-control" id="managerTel" placeholder="" ng-model="manager.managerTel">
					    </div>
					  </div>
					  
					  <div class="form-group">
					    <label for="managerIdcard" class="col-sm-2 control-label">身份证</label>
					    <div class="col-sm-6">
					      <input type="managerIdcard" class="form-control" id="managerIdcard" placeholder="" ng-model="manager.managerIdcard">
					    </div>
					  </div>
					  
					  <div class="form-group">
					    <label for="managerAddress" class="col-sm-2 control-label">地址</label>
					    <div class="col-sm-6">
					      <input type="managerAddress" class="form-control" id="managerAddress" placeholder="" ng-model="manager.managerAddress">
					    </div>
					  </div>
					  
					  <div class="form-group">
					    <label for="managerEmail" class="col-sm-2 control-label">Email</label>
					    <div class="col-sm-6">
					      <input type="managerEmail" class="form-control" id="managerEmail" placeholder="" ng-model="manager.managerEmail">
					    </div>
					  </div>
					  
					  <div class="form-group">
					    <label for="managerState" class="col-sm-2 control-label">状态</label>
					      <div class="col-sm-3">
					      	<select class="form-control" ng-model="manager.managerState">
							  <option  value="1">正常</option>
					      	  <option  value="2">异常</option>
							</select>
					      </div>
					    </div>
					</form>
	      </div>
	      <div class="modal-footer">
		        <button type="button" class="btn btn-default" style="margin-bottom: 0;" data-dismiss="modal">关闭</button>
				<button type="button" class="btn btn-primary" ng-click="updateSysManager()">保存</button>
	      </div>
	    </div>
	  </div>
	</div>
</div>
    
