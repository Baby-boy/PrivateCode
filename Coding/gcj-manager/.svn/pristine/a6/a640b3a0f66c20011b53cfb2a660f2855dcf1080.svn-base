input,select,textarea{vertical-align:middle; *font-size:100%;}

input{ margin:0;outline:none; padding:0;}

input::-ms-clear{display:none;}

.clearfix:after{

     content:".";        

     display:block;        

     height:0;        

     clear:both;        

     visibility:hidden;        



}

.clearfix{*zoom:1}



/* m_zlxg */

.m_zlxg{ 
	width:178px; 
	height:34px; 
	line-height:34px;
	cursor:pointer;
	float:left;
	margin:0 10px 0 0;
	display:inline;
	border: 1px solid #EAEAEA;
	position: relative;
	background: #FAFAFA;
	/*background:url(../images/zlxg2.jpg) no-repeat;*/
}
.m_zlxg .sele-tj {
  position: absolute;
  background: #fafafa;
  top: 50%;
  right: 10px;
  margin-top: -2px;
  border-top: 5px solid #666;
  border-right: 5px solid transparent;
  border-left: 5px solid transparent;
}

.m_zlxg p{ 
	width:168px; 
	padding-left:10px; 
	overflow:hidden; 
	line-height:34px; 
	color:#B0B0B0; 
	font-size:14px; 
	text-overflow:ellipsis; 
	white-space:nowrap;
}

.m_zlxg2{ 
	position:absolute; 
	top:35px; 
	left: -1px;
	border:1px solid #EAEAEA;
	background:#fff; 
	width:178px; 
	display:none; 
	max-height:224px;
	-height:224px; 
	overflow-x:hidden; 
	overflow-y:auto;
	white-space:nowrap;}

.m_zlxg2 li{line-height:34px;white-space:nowrap; padding-left:10px;font-family:"微软雅黑";color:#B0B0B0; font-size:14px;}

.m_zlxg2 li:hover{ background: #73E6D6;color: #ffffff;}