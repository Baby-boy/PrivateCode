                <option value="3" th:selected="${user_skillstate==3? 'selected' : 'false'}">认证审核中</option>
            </select>
        </li> -->
        <li>
           <select name="user_type" id="userType" class="input" style="width:200px; line-height:17px;" onchange="changesearch()">
               <option value="">全部</option>
               <option value="0" th:selected="${user_verified == 3? 'selected' : 'false'}">实名认证审核中</option>
               <option value="1" th:selected="${user_skillstate == 3? 'selected' : 'false'}">技能认证审核中</option>
               <option value="2" th:selected="${user_cstate == 3? 'selected' : 'false'}">服务商认证审核中</option>
           </select>
        </li>
        <li>
            <button type="button" id="sesubmit"  class="button border-green">查询</button>
        </li>
      </ul>

    </div>
    <table class="table table-hover text-center">
      <tr>
        <th>序号</th>
        <th>用户姓名</th>       
        <th>手机号码</th>
        <th>是否冻结</th>
        <th>公司名称</th>
        <th>公司认证状态</th>
        <th>技能认证状态</th>
        <th>实名认证状态</th>
        <th>操作</th>      
      </tr>

        
        <tr th:each="serverList,obj:${serverList}" >
<!--           <td ><input type="checkbox" name="user_id" th:text="${serverList.user_id}" /></td> -->
          <td th:text="${obj.count}" ></td>
          <td th:text="${serverList.user_name}" ></td>
          <td th:text="${serverList.user_phone}"></td>
          <td th:text="${serverList.user_isdel==0? '否' : '是' }" ></td>
          <td th:text="${serverList.user_ename}" ></td>
          <td th:switch="${serverList.user_cstate}" >
          	<p th:case=" '0' " >未认证</p>
          	<p th:case=" '1' " >认证成功</p>	
