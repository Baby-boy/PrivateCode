                <option value="3" th:selected="${user_cstate==3? 'selected' : 'false'}">认证审核中</option>
            </select>
        </li>
        <li>
            <select name="user_skillstate" class="input" style="width:200px; line-height:17px;" onchange="changesearch()">
                <option value="">请选择技能认证状态</option>
                <option value="0" th:selected="${user_skillstate==0? 'selected' : 'false'}" >未认证</option>
