//条件搜索
$('#sesubmit').click(function(){
	 var userType=$("#userType").val();
	 if (userType == "0") {
		 $("#userVerified").val("3");
		 $("#userSkillstate").val("");
		 $("#userCstate").val("");
	 } else if (userType == "1") {
		 $("#userSkillstate").val("3");
		 $("#userCstate").val("");
		 $("#userVerified").val("");
	 }else if (userType == "2") {
		 $("#userVerified").val("");
		 $("#userSkillstate").val("");
		 $("#userCstate").val("3");
	 }else{
		 $("#userVerified").val("");
		 $("#userSkillstate").val("");
		 $("#userCstate").val("");
	 }
	$('#queryForm').submit();
});
